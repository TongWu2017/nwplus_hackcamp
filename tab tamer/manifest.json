{
  "manifest_version": 3,
  "name": "Tab Tamer skeleton",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "<all_urls>"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background":{
    "service_worker":"background.js"
  },
  "content_scripts":[{
    "js": ["content.js"],
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "run_at": "document_idle"
  }]
}